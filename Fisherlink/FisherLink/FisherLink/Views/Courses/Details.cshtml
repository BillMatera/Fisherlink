</head>
<body>
    <div id="map"> </div>
    <script>
        function initMap() {
            var location = { lat: @Model.lat, lng: @Model.lng };
            var map = new google.maps.Map(document.getElementById("map"),{
                zoom: 20,
                center: location
            });

            var marker = new google.maps.Marker({
                position: location,
                map: map,
                title: '@Model.Building'
                });
        }
    </script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBNJZiDyVh5iNX-IYQgyiC-3OrW_W7h7os&callback=initMap">  </script>
